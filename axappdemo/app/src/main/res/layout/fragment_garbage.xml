<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.GarbageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/garbageDetectTiktokTimeDesc"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_weight="9"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:text="倒计时30秒"
                android:textAlignment="textEnd"
                android:textColor="#ff0000"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/garbageDetectProcessDescription"
            android:layout_width="match_parent"
            android:layout_height="336dp"
            android:paddingTop="50dp"
            android:text="正在检测垃圾分类..."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24dp"

            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSendMessage2PLC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="发送垃圾检测请求到PLC" />


    </LinearLayout>
</FrameLayout>